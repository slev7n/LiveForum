{
	"manifest_version": 2,
	"name": "LiveForum",
	"version": "3.0.4",
	"description": "Giving a glass of ice water to forum.ge users",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"options_ui": {
		"open_in_tab": true, 
		"page": "html/options.html"
	},

	"content_scripts": [
		{
			"matches": ["*://forum.ge/*showtopic*", "*://*.forum.ge/*showtopic*"],
			"js": ["js/pubsub.js", "js/storage.js", "js/main.js"],
			"css": ["css/style.css"]
		},
		{
			"matches": ["*://forum.ge/*", "*://*.forum.ge/*"],
			"js": ["js/pubsub.js", "js/storage.js", "js/notifications.js"],
			"css": ["css/notifications.css"]
		}
	],

	"web_accessible_resources":["*"]
}