{
	"manifest_version": 2,
	"name": "LiveForum",
	"version": "3.0",
	"description": "forum.ge BBCode helper",
	"icons": {
		"48": "icons/icon_48.png"
	},

	"options_page": "html/options.html",

	"content_scripts": [
		{
			"matches": ["*://forum.ge/*showtopic*", "*://*.forum.ge/*showtopic*"],
			"js": ["js/pubsub.js", "js/storage.js", "js/main.js"],
			"css": ["css/style.css"]
		},
		{
			"matches": ["*://forum.ge/*", "*://*.forum.ge/*"],
			"js": ["js/pubsub.js", "js/storage.js", "js/notifications.js"],
			"css": ["css/notifications.css"]
		}
	],

	"web_accessible_resources":["*"]
}